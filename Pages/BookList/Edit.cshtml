@page
@model BookListRazorPages.Pages.BookList.EditModel


<br />

<h2 class="text-info">Create New Book</h2>
<br />
<hr />

<div class="border container" style="padding: 20px;">
    <form method="post">
        <input type="hidden" asp-for="Book.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Name"></label>
            </div>

            <div class="col-4">
                <input asp-for="Book.Name" placeholder="enter a book name" class="form-control" required />
            </div>
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>

            <div class="col-4">
                <input asp-for="Book.Author" class="form-control" placeholder="enter the author name" required />
            </div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>

            <div class="col-4">
                <input asp-for="Book.ISBN" class="form-control" placeholder="enter the ISBN" required />
            </div>
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary btn-lg" />
                <a asp-page="Index" class="btn btn-success btn-lg">Back To List</a>

            </div>


        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
