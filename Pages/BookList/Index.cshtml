@page
@model BookListRazorPages.Pages.BookList.IndexModel


<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2>Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info text-white">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form action="/" method="post">
            @if(!(Model.Books.Count() == 0))
            {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @*custom tag helpers*@
                        <label asp-for="Books.FirstOrDefault().Name"></label>

                        @*html tag helpers*@
                        @*<th>@Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author</th> *@
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().Author"></label>
                    </th>
                    <th>
                        <label>Actions</label>
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach(var item in Model.Books)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(m => item.Author)
                        </td>

                        <td>
                            <button class="btn btn-success btn-sm">Edit</button>
                            <a href="#" class="btn btn-danger btn-sm text-white">Delete</a>
                        </td>
                    </tr>
                }
            </table>
            }
            else
            {
            <p>Sorry, There are no books available at the moments!</p>
            }
        </form>
    </div>
</div>
